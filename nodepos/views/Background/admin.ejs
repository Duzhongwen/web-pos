<%- include header%>
<script src="javascripts/viewStage/admin.js"></script>
    <div class="col-md-12 shopManage">
        <p>商品信息管理</p>
        <a type="button" class="btn btn-primary" href="/add_product">添加商品</a>

        <table class="table table-hover table-responsive">
            <tr>
                <td>序号</td>
                <td>商品名称</td>
                <td>商品数量</td>
                <td>单价(元)</td>
                <td>单位</td>
                <td>发布时间</td>
                <td>操作</td>
            </tr>
            <% var count = 1; products.forEach(function(product,index){ %>
            <tr>
                <td><%= count++ %></td>
                <td><%= product.商品名称 %></td>
                <td>
                    <form method="post">
                        <div class="btn-group">
                             <a class="btn btn-default" href="/less_num?name=<%= product.商品名称 %>&number=<%= product.数量 %>">-</a>
                             <input type="text" class="btn btn-default" size="1" name="num" placeholder="<%= product.数量 %>">
                             <a class="btn btn-default"  href="/add_num?name=<%= product.商品名称 %>&number=<%= product.数量 %>">+</a>
                        </div>
                    </form>
                </td>
                <td><%= product.价格 %></td>
                <td><%= product.单位 %></td>
                <td>2014-09-24</td>
                <td>
                    <a href="/detail_product?name=<%= product.商品名称 %>">详情</a>
                    <a href="/delete?name=<%= product.商品名称 %>" onclick="return get_status()">删除</a>
                </td>
            </tr>
            <% }) %>
        </table>
    </div>
<br />
<div>
    <% if (!isFirstPage) { %>
    <span class="prepage"><a title="上一页" href="?p=<%= page - 1 %>">上一页</a></span>
    <% } %>

    <% if (!isLastPage) { %>
    <span class="nextpage"><a title="下一页" href="?p=<%= page + 1 %>">下一页</a></span>
    <% } %>
</div>
<%- include footer %>